<section class="container OwnRoomsContainer">
    <h2>登録済み一覧</h2>

    <div class="table-responsive">
        <table class="table align-middle OwnRoomsTable">
            <thead>
                <tr>
                    <th>画像</th>
                    <th>施設名</th>
                    <th>施設詳細</th>
                    <th>料金</th>
                    <th>作成日</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @rooms.each do |room| %>
                    <tr>
                        <td>
                            <%= image_tag room.image.url ,class:"RoomDetails__image"%>
                        </td>

                        <td>
                            <%=link_to room.name, room_path(room.id) %>
                        </td>

                        <td>
                            <%= room.introduction %>
                        </td>

                        <td class="text-nowrap">
                            <p>¥<%= room.priice %>/日</p>
                        </td>

                        <td class="text-nowrap">
                            <%=l room.updated_at.to_date %>
                        </td>

                        <td>
                            <div class="dropdown">
                                <div class="d-flex align-items-center justify-content-center" id="dropdown-button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <%= image_tag "kebab.jpg", alt: "Rails icon", id: "assets", class: "image", width: "20px" %>
                                </div>

                                <ul class="dropdown-menu DropdownMenu" aria-labelledby="dropdown-button">
                                    <li class="DropdownMenu__item">
                                        <%= link_to "編集",edit_room_path(room) %>
                                    </li>

                                    <li class="DropdownMenu__item DropdownMenu__item--danger">
                                        <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</section>